  </PropertyGroup>
  <PropertyGroup>
    <PostBuildEvent>ren "$(ProjectDir)bin\$(Platform)\$(Configuration)\FITS Explorer Extension.msi" "FITS Explorer Extension ($(Platform)).msi"</PostBuildEvent>
