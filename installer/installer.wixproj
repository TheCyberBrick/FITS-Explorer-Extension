call "$(WIX)bin\heat.exe" file "$(ProjectDir)resources\bin\x86\FITSExplorerExtension32.dll" -generate components -srd -gg -g1 -t "$(ProjectDir)COMRegistry.xslt" -o "$(ProjectDir)COMRegistry.wxs"

